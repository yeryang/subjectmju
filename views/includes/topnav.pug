nav.navbar.navbar-expand-lg.fixed-top.navbar-dark.bg-dark
  a.navbar-brand.mr-auto.mr-lg-0(href='/')= title
  button.navbar-toggler.p-0.border-0(type='button', data-toggle='offcanvas')
    span.navbar-toggler-icon
  #navbarsExampleDefault.navbar-collapse
    ul.navbar-nav.mr-auto
      li.nav-item(class=(name === "공모전" ? "active" : undefined))
        a.nav-link(href='/project') 공모전
      if !user
        li.nav-item(class=(name === "가입" ? "active" : undefined))
          a.nav-link(href='/users/signup') 가입
        li.nav-item(class=(name === "로그인" ? "active" : undefined))
          a.nav-link(href='/users/signin') 로그인
      if user 
        li.nav-item
          a.nav-link(href='/users/logout') 로그아웃 
      if user && user.isAdmin
        li.nav-item
          a.nav-link(href='/admin') 사용자 관리 
      if user && user.isAdmin
        li.nav-item
          a.nav-link(href='/admin/project') 공모전 관리

    form.form-inline.my-2.my-lg-0
      input.form-control.mr-sm-2(type='text', placeholder='Search', aria-label='Search')
      button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
